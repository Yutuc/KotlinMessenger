<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="80dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:civ_border_width="2dp"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/profile_picture_imageview_latest_message_row"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintVertical_chainStyle="packed"
            android:id="@+id/username_textview_latest_messages"
            app:layout_constraintStart_toEndOf="@+id/profile_picture_imageview_latest_message_row"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/latest_message_textview_latest_messages"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Latest Message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="packed"
            android:id="@+id/latest_message_textview_latest_messages"
            app:layout_constraintStart_toEndOf="@+id/profile_picture_imageview_latest_message_row"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/username_textview_latest_messages"
            app:layout_constraintHorizontal_bias="0.5" android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>