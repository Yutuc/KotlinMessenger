<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/black"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/received_imageview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="This is my messageThis is my messageThis is my messageThis is my messageThis is my message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:maxWidth="240dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"
            android:background="@drawable/rounded_edittext_register_login"
            app:layout_constraintStart_toEndOf="@+id/received_imageview"
            app:layout_constraintTop_toTopOf="@+id/received_imageview"
            android:layout_marginStart="8dp" android:id="@+id/received_textview"/>
</android.support.constraint.ConstraintLayout>


